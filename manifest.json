{
  "manifest_version": 3,
  "name": "GitHub AsciiDoc Mermaid Preview",
  "version": "1.0.0",
  "description": "Render embedded Mermaid diagrams in GitHub AsciiDoc preview from link:path.mmd[role=include]",
  "permissions": ["storage"],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [{
    "matches": ["https://github.com/*/*/blob/*"],
    "js": ["content/index.js"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["src/renderer/index.html", "src/renderer/index.js"],
    "matches": ["https://github.com/*"]
  }],
  "options_ui": { "page": "src/options/index.html" },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
